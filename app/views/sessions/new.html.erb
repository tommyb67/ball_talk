<div class="text-center">
  <h1>Log in</h1>

  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :user_name %><br/>
      <%= text_field_tag :user_name, params[:user_name] %>
    </p>
    <p>
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
    </p>
    <p class="button"><%= submit_tag value = "Log in"%></p>
  <% end %>
</div>